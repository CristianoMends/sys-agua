<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: white;" stylesheets="@../../styles/produtos.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pies.sysaguaapp.controllers.ClientesController">
    <children>
        <BorderPane fx:id="formCadastroClientes" maxHeight="466.0" maxWidth="437.0" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10;" visible="false">
            <top>
                <HBox alignment="CENTER" maxHeight="100.0" prefHeight="50.0" spacing="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleDetailsClienteModal" style="-fx-border-color: #5A6ACF; -fx-border-width: 0 0 1px 0;" styleClass="switchDetails" text="CLIENTES" />
                    </children>
                </HBox>
            </top>
            <center>
                <StackPane minHeight="230.0" minWidth="437.0" BorderPane.alignment="CENTER_LEFT">
                    <children>
                        <VBox fx:id="detailsFormCliente" managed="true" minHeight="205.0" minWidth="365.0" spacing="5.0">
                            <children>
                                <Label styleClass="label-field" text="NOME DO CLIENTE OU RAZÃO SOCIAL" />
                                <TextField fx:id="nomeCompleto_RazaoSocialFieldField" promptText="NomeCompleto_RazaoSocial" styleClass="text-field" />
                                <Label fx:id="nomeCompleto_RazaoSocialErrorLabel" style="-fx-text-fill: red;" text="Campo inválido" visible="false" />
                                <Label styleClass="label-field" text="ENDEREÇO COMPLETO" />
                                <TextField fx:id="EnderecoCompletoFieldField" promptText="Endereço Completo" styleClass="text-field" />
                                <HBox maxHeight="50.0" prefHeight="100.0" prefWidth="299.0">
                                    <children>
                                        <VBox maxHeight="50.0" prefHeight="200.0">
                                            <children>
                                                <Label styleClass="label-field" text="TELEFONE" />
                                                <TextField fx:id="telefoneFieldField" promptText="Telefone" styleClass="text-field" />
                                            </children>
                                        </VBox>
                                        <Region maxWidth="120.0" prefHeight="200.0" prefWidth="120.0" />
                                        <VBox maxHeight="50.0" prefHeight="200.0">
                                            <children>
                                                <Label styleClass="label-field" text="CNPJ" />
                                                <TextField fx:id="CNPJField" promptText="CNPJ" styleClass="text-field" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <Label styleClass="label-field" text="Email" />
                                <TextField fx:id="EmailField" promptText="Email" styleClass="text-field" />
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0" />
                            </padding>
                        </VBox>
                    </children>
                </StackPane>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" minWidth="437.0" prefHeight="45.0" spacing="20.0" BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <Button onAction="#handleCancelar" style="-fx-background-color: #FEBAC6; -fx-text-fill: #F2383A;" styleClass="menu-button" text="Cancelar" />
                        <Button onAction="#handleSalvar" style="-fx-background-color: #DDE4F0; -fx-text-fill: #5A6ACF;" styleClass="menu-button" text="Salvar" />
                    </children>
                    <padding>
                        <Insets right="20.0" />
                    </padding>
                </HBox>
            </bottom>
        </BorderPane>
        <Rectangle fx:id="overlay" fill="#D9D9D9" managed="false" visible="false" />
        <VBox fx:id="listClienteView" prefHeight="200.0" prefWidth="100.0">
            <children>
                <StackPane prefHeight="90.0">
                    <children>
                        <Label fx:id="successMessage" alignment="CENTER" minHeight="50.0" style="-fx-text-fill: white; -fx-background-color: green; -fx-font-size: 18px; -fx-border-color: transparent; -fx-border-width: 1; -fx-border-radius: 5;" styleClass="success-Message" text="Cadastro realizado com sucesso!" visible="false" StackPane.alignment="CENTER_RIGHT">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="90.0" style="-fx-padding: 10; -fx-border-color: #C8CBD9; -fx-border-width: 0 0 1px 0;">
                            <children>
                                <Label text="Todos os Clientes" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button mnemonicParsing="false" onAction="#handleAddCliente" styleClass="menu-button" text="Adicionar" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets right="20.0" />
                    </padding>
                </StackPane>
                <StackPane prefHeight="472.0" prefWidth="917.0">
                    <children>
                        <TableView fx:id="tabelaClientes" prefHeight="484.0">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy></TableView>
                    </children>
                </StackPane>
                <HBox fx:id="paginationContainer" alignment="CENTER" minHeight="50" minWidth="365.0" spacing="10">
                    <children>
                        <Button fx:id="btnAnterior" onAction="#handlePaginaAnterior" text="Anterior" />
                        <Button fx:id="btnProximo" onAction="#handleProximaPagina" text="Próximo" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
