<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="edu.pies.sysaguaapp.controllers.HomeController">
    <!-- Menu Lateral -->
    <left>
        <VBox spacing="10" prefWidth="200" style="-fx-background-color: #2A2A2A; -fx-padding: 10;">
            <Label text="Menu" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Button text="Dashboard" prefWidth="180" onAction="#handleDashboard" styleClass="menu-button" />
            <Button text="Cadastros Gerais" prefWidth="180" onAction="#handleCadastrosGerais" styleClass="menu-button" />
            <Button text="Entregas" prefWidth="180" onAction="#handleEntregas" styleClass="menu-button" />
            <Button text="Compras" prefWidth="180" onAction="#handleCompras" styleClass="menu-button" />
            <Button text="Estoque" prefWidth="180" onAction="#handleEstoque" styleClass="menu-button" />
            <Button text="Caixa" prefWidth="180" onAction="#handleCaixa" styleClass="menu-button" />
            <Button text="Relatório" prefWidth="180" onAction="#handleRelatorio" styleClass="menu-button" />
            <Button text="Usuário" prefWidth="180" onAction="#handleUsuario" styleClass="menu-button" />
            <Pane fx:id="spacer" VBox.vgrow="always" />
            <Button text="Sair" prefWidth="180" onAction="#handleSair" styleClass="menu-button" />
        </VBox>
    </left>

    <!-- Área Principal -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <Label text="Bem-vindo ao SysAgua!" style="-fx-font-size: 24px;" />
        </StackPane>
    </center>
</BorderPane>
