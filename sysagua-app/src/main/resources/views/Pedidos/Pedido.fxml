<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: white;" stylesheets="@../../styles/pedidos.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pies.sysaguaapp.controllers.PedidoController">
    <Rectangle fx:id="overlay" fill="#D9D9D9" managed="false" visible="false" />
    <VBox fx:id="listClienteView" prefHeight="200.0" prefWidth="100.0">
        <children>
            <StackPane prefHeight="90.0">
                <children>
                    <Label fx:id="successMessage" alignment="CENTER" minHeight="50.0" style="-fx-text-fill: white; -fx-background-color: green; -fx-font-size: 18px; -fx-border-color: transparent; -fx-border-width: 1; -fx-border-radius: 5;" styleClass="success-Message" text="Cadastro realizado com sucesso!" visible="false" StackPane.alignment="CENTER_RIGHT">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <HBox alignment="CENTER_LEFT" prefHeight="90.0" style="-fx-padding: 10; -fx-border-color: #C8CBD9; -fx-border-width: 0 0 1px 0;">
                        <children>
                            <Label text="Todos os Pedidos" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button mnemonicParsing="false" onAction="#handleAddPedido" styleClass="menu-button" text="Adicionar" />
                        </children>
                    </HBox>
                </children>
                <padding>
                    <Insets right="20.0" />
                </padding>
            </StackPane>

            <!-- Novo campo para seleção de data com ícone de calendário e label clicável -->
            <VBox spacing="5" style="-fx-padding: 10;">
                <children>
                    <Label text="A partir de:" onMouseClicked="#handleAbrirCalendario" />
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                            <DatePicker fx:id="datePicker" onMouseClicked="#handleAbrirCalendario" />
                            <ImageView fx:id="calendarIcon" fitWidth="20" fitHeight="20" onMouseClicked="#handleAbrirCalendario" />
                        </children>
                    </HBox>
                </children>
            </VBox>

            <TableView fx:id="tabelaPedido" prefHeight="484.0" styleClass="table-view">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox fx:id="paginationContainer" alignment="CENTER" minHeight="50" minWidth="365.0" spacing="10">
                <children>
                    <Button fx:id="btnAnterior" onAction="#handlePaginaAnterior" text="Anterior" />
                    <Button fx:id="btnProximo" onAction="#handleProximaPagina" text="Próximo" />
                </children>
            </HBox>
        </children>
    </VBox>
</StackPane>
